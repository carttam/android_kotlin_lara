<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image.height"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="@dimen/text.padding"
        android:text="علی رضا"
        android:textDirection="rtl"
        android:textSize="@dimen/text.font_size"
        app:layout_constraintTop_toBottomOf="@+id/post_image"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="@dimen/text.padding"
        android:text=" عنوان متنعنوان متنعنوان متنعنوان متنعنوان متنعنوان متنعنوان متنعنوان متنعنوان متنعنوان متنعنوان متنعنوان متنعنوان متن عنوان متن متنعنوان متنعنوان متن عنوانمتنعنوان متننوانمتنعنوتن عنوان متنعن"
        android:textDirection="rtl"
        android:textSize="@dimen/text.font_size"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/comment_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_text_view"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>